<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/constraint_layout">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="@dimen/margin_wide"
            android:layout_marginLeft="@dimen/margin_wide"
            android:layout_marginRight="@dimen/margin_wide" android:fontFamily="@font/roboto"
            android:textSize="@dimen/box_text_size" style="@style/whiteBox" android:text="@string/box_one"
            android:id="@+id/box_one_text"/>
    <TextView
            android:text="@string/box_two"
            android:layout_width="130dp"
            android:layout_height="130dp" android:id="@+id/box_two_text" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/box_one_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textAlignment="center" style="@style/whiteBox"/>
    <TextView
            android:text="@string/box_tree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/box_tree_text" style="@style/whiteBox"
            app:layout_constraintTop_toBottomOf="@+id/box_one_text"
            app:layout_constraintBottom_toTopOf="@+id/box_four_text"
            app:layout_constraintTop_toTopOf="@+id/box_two_text" app:layout_constraintStart_toEndOf="@+id/box_two_text"
            android:layout_marginStart="@dimen/margin_wide" android:layout_marginEnd="@dimen/margin_wide"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/box_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/box_four_text"
            style="@style/whiteBox"
            app:layout_constraintTop_toBottomOf="@+id/box_tree_text"
            app:layout_constraintBottom_toTopOf="@+id/box_five_text"
            app:layout_constraintStart_toEndOf="@+id/box_two_text" android:layout_marginStart="@dimen/margin_wide"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/margin_wide"
            android:layout_marginTop="@dimen/margin_wide" android:layout_marginBottom="@dimen/margin_wide"/>
    <TextView
            android:text="@string/box_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/box_five_text"
            style="@style/whiteBox"
            app:layout_constraintTop_toBottomOf="@+id/box_four_text"
            app:layout_constraintBottom_toBottomOf="@+id/box_two_text"
            app:layout_constraintStart_toEndOf="@+id/box_two_text" android:layout_marginStart="@dimen/margin_wide"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/margin_wide"/>
    <TextView
            android:text="@string/how_to_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_text"
            android:textSize="24sp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBaseline_toBaselineOf="@+id/info_text"/>
    <TextView
            android:text="@string/tap_the_boxes_and_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/info_text" android:fontFamily="@font/roboto"
            app:layout_constraintStart_toEndOf="@+id/label_text" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/box_two_text"/>
    <Button
            android:text="@string/button_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_red"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_yellow"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_yellow"/>
    <Button
            android:text="@string/button_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_green"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_yellow"
            app:layout_constraintStart_toEndOf="@+id/button_yellow" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/button_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_yellow"
            app:layout_constraintStart_toEndOf="@+id/button_red"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button_green"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/info_text"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>